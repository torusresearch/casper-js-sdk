{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es5",
      "lib": ["ES2020", "DOM"],
      "moduleResolution": "node",
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitThis": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "src/*": ["*/index.ts"]
      },
      "skipLibCheck": true
    }
  }
  